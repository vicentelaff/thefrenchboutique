{% extends 'base.html.twig' %}

{% block title %}Our Products - The French Boutique
{% endblock %}

{% block content %}

	<div class="row">

		<div class="col-md-3">
					<h2>Filter</h2>
					{{ form(form) }}
		</div>

		<div class="col-md-9">
			<h2>Our Products</h2>

			<div class="row product-container">
				{% for product in products %}
					<div class="col-md-4">
						<div class="product-item text-center">
							<a href="{{ path('product', { 'slug': product.slug }) }}">
								<img src="/uploads/{{ product.image }}" alt="{{ product.name }}" class="img-fluid">
							</a>
							<h5 class="product-name">{{ product.name }}</h5>
							<span class="product-subtitle">{{ product.subtitle }}</span>
							<span class="product-price text-success">{{ product.price / 100 }}â‚¬</span>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>


{% endblock %}
