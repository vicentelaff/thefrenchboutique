{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
	- The French Boutique
{% endblock %}

{% block content %}

	<div class="row">
		<div class="col-md-5">
			<img src="/uploads/{{ product.image }}" alt="{{ product.name }}" class="img-fluid">
		</div>

		<div class="col-md-7 my-auto">
			<h3>{{ product.name }}</h3>
			<p>{{ product.subtitle }}</p>
			<span class="single-product-price text-success">{{ product.price / 100 }}â‚¬</span>
			<hr>
			<p>{{ product.description }}</p>
			<a href="{{ path('add_to_cart', { 'id': product.id }) }}" class="btn btn-success">Add to cart</a>
		</div>
	</div>
	<hr>
	<h3>Trending products</h3>
	<p>The best products of the season!</p>
	<div class="row">
		{% for product in products %}
			<div class="col-md-3">
				{% include "products/single_product.html.twig" %}
			</div>
		{% endfor %}
	</div>


{% endblock %}
